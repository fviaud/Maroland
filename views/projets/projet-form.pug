form(class="p-2" method="post" action= projet._id ? "/projets/update/" + projet._id : "/projets")
  div(class="form-group")
    label Nom du projet:
    input(name="nom" class="form-control" type="text" value=projet.nom )
  div(class="form-group")
    label Description:
    textarea(name="description" class="form-control" rows="5" placeholder="Descriptif du projet")= projet.description
  div(class="form-group")
    label Basicat:
    input(name="basicat" class="form-control" type="text" )
  div(class="form-group")
    label Type de projet: 
    select(name="type" class="form-control" type="text")
      each typeprojet in typeprojets
        if projet.type && (typeprojet._id.toString() === projet.type.toString())
          option( selected value=typeprojet._id)= typeprojet.nom
        else
          option( value=typeprojet._id)= typeprojet.nom    
  div
    if (locals.errors && errors && errors.length)
      ul
        each error in errors
          li= error
  div
    input(type="submit" value=projet._id ? "Modifier" : "Ajouter" class="btn btn-primary btn-sm mr-2")
    if projet._id 
      a(class="btn btn-danger btn-lg btn-sm mr-2" href="/projets/delete/"+ projet._id)="Supprimer"
    a(href="/projets" class="btn btn-secondary btn-lg btn-sm" role="button")="Annuler"
