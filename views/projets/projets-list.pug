script(src="/javascripts/projets/projets.js")
div(class="table-responsive")
  table(class="table table-hover")
    thead
      tr
        th(scope="col") Nom
        th(scope="col") Auteur
        th(scope="col") Description
    tbody
      each projet in projets
        tr
          td
            a(class="row projet" projetId=projet.id href="#")=projet.titre
            span(class="row font-weight-light d-inline-block text-truncate" style="max-width:100%;")=projet.details
          td=projet.auteur
