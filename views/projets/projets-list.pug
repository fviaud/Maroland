script(src="/javascripts/projets/projets.js")
div(class="table-responsive")
  table(class="table table-hover")
    thead
      tr
        th(scope="col") Nom
        th(scope="col") Auteur
        th(scope="col") Type
    tbody
      each projet in projets
        tr
          td(class="p-0")
            a(class="row pl-2 projet" projetId=projet.id href="#")=projet.titre
            span(class="row pl-2 font-weight-light d-inline-block text-truncate" style="max-width:100%;")=projet.details
          td=projet.auteur
          td=""
